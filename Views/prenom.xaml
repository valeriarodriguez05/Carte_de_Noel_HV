<Window x:Class="Carte_de_Noel_HV.Views.cartewindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Carte_de_Noel_HV.Views"
        mc:Ignorable="d"
        Title="Carte de Noël"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen">

    <!-- 🌄 GRID PRINCIPAL AVEC IMAGE EN ARRIÈRE-PLAN -->
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Images/fondnoelflou.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- 🌑 Voile sombre -->
        <Rectangle Fill="#66000000"/>

        <!-- 🎁 CONTENU CENTRÉ -->
        <Border Background="#AA000000"
                CornerRadius="15"
                Padding="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <StackPanel Width="300">

                <TextBlock Text="Entrez votre prénom"
                           FontSize="22"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>

                <TextBox x:Name="PrenomTextBox"
                         Height="22"
                         FontSize="16"
                         HorizontalContentAlignment="Center"/>

                <Button Content="Valider"
                        Height="40"
                        Margin="0,20,0,0"
                        FontSize="16"
                        Click="Valider_Click"/>

                <TextBlock x:Name="ResultatText"
                           FontSize="16"
                           Foreground="White"
                           Margin="0,20,0,0"
                           TextAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
