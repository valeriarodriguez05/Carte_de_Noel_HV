<Window x:Class="Carte_de_Noel_HV.Views.cartewindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Carte_de_Noel_HV.Views"
        mc:Ignorable="d"
        Title="cartewindow" Height="450" Width="800">
    <Grid>
        <StackPanel>

            <TextBlock Text="Entrez votre prénom :" 
                       FontSize="16" 
                       Margin="0,0,0,10"/>

            <TextBox x:Name="PrenomTextBox" 
                     Height="30" 
                     FontSize="14"/>

            <Button Content="Valider"
                    Height="35"
                    Margin="0,15,0,0"
                    Click="Valider_Click"/>

            <TextBlock x:Name="ResultatText"
                       FontSize="16"
                       Margin="0,15,0,0"/>

        </StackPanel>
        
    </Grid>
</Window>
