<Window x:Class="Carte_de_Noel_HV.Views.calendrier"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Carte_de_Noel_HV.Views"
        mc:Ignorable="d"
        Title="calendrier" Height="500" Width="600">
    <Grid Background="#FFF5E6">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="450">

            <!-- TEXTE DE BIENVENUE PERSONNALISÉ -->
            <TextBlock x:Name="TexteBienvenue"
                       FontSize="20"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,0,0,25"/>


            <!-- Bouton qui ouvre la nouvelle fenêtre -->
            <Button Content="Voir la carte du jour"
                    Height="50"
                    FontSize="18"
                    Click="Button_Click"/>
        </StackPanel>
    </Grid>

</Window>
