<Window x:Class="Carte_de_Noel_HV.Views.carte_du_jour"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:Carte_de_Noel_HV.Views"
		mc:Ignorable="d"
		Title="carte_du_jour" Height="450" Width="800">
	
	<!-- Image de fond -->
	<Grid>
		
        <Grid.Background>
            <ImageBrush ImageSource="C:\Users\vardr\Source\Repos\Carte_de_Noel_HV\Images\pingouindenoel.png"
                Stretch="Fill"/>
        </Grid.Background>


        <!-- Grid des étoiles avec marges -->
		<Grid Margin="44,25,44,36">
			<!-- Colonnes -->
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<!-- Lignes -->
			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>

			<!-- Style commun pour les étoiles -->
			<Grid.Resources>
				<Style x:Key="StarButtonStyle" TargetType="Button">
					<Setter Property="Width" Value="70"/>
					<Setter Property="Height" Value="70"/>
					<Setter Property="Margin" Value="5"/>
					<Setter Property="Template">
						<Setter.Value>
							<ControlTemplate TargetType="Button">
								<Grid>
									<Polygon Points="35,0 43,25 70,25 48,40 55,70 35,50 15,70 22,40 0,25 27,25"
											 Fill="{TemplateBinding Background}"
											 Stroke="DarkGoldenrod" StrokeThickness="2"/>
									<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
								</Grid>
							</ControlTemplate>
						</Setter.Value>
					</Setter>
				</Style>
			</Grid.Resources>

			<!-- Ligne 0 -->
            <Button Grid.Row="0" Grid.Column="0" Content="1"  Tag="1"  Background="Green" Click="Case_Click" Style="{StaticResource StarButtonStyle}"/>
            <Button Grid.Row="0" Grid.Column="1" Content="2"  Tag="2"  Background="Red"   Click="Case_Click" Style="{StaticResource StarButtonStyle}"/>
            <Button Grid.Row="0" Grid.Column="2" Content="3"  Tag="3"  Background="Green" Click="Case_Click" Style="{StaticResource StarButtonStyle}"/>
            <Button Grid.Row="0" Grid.Column="3" Content="4"  Tag="4"  Background="White" Click="Case_Click" Style="{StaticResource StarButtonStyle}"/>
            <Button Grid.Row="0" Grid.Column="4" Content="5"  Tag="5"  Background="Red"   Click="Case_Click" Style="{StaticResource StarButtonStyle}"/>
            <Button Grid.Row="0" Grid.Column="5" Content="6"  Tag="6"  Background="Green" Click="Case_Click" Style="{StaticResource StarButtonStyle}"/>

            <!-- Ligne 1 -->
            <Button Grid.Row="1" Grid.Column="0" Content="7"  Tag="7"  Background="Red"   Click="Case_Click" Style="{StaticResource StarButtonStyle}"/>
            <Button Grid.Row="1" Grid.Column="1" Content="8"  Tag="8"  Background="Green" Click="Case_Click" Style="{StaticResource StarButtonStyle}"/>
            <Button Grid.Row="1" Grid.Column="2" Content="9"  Tag="9"  Background="White" Click="Case_Click" Style="{StaticResource StarButtonStyle}"/>
            <Button Grid.Row="1" Grid.Column="3" Content="10" Tag="10" Background="Red"   Click="Case_Click" Style="{StaticResource StarButtonStyle}"/>
            <Button Grid.Row="1" Grid.Column="4" Content="11" Tag="11" Background="Green" Click="Case_Click" Style="{StaticResource StarButtonStyle}"/>
            <Button Grid.Row="1" Grid.Column="5" Content="12" Tag="12" Background="White" Click="Case_Click" Style="{StaticResource StarButtonStyle}"/>

            <!-- Ligne 2 -->
            <Button Grid.Row="2" Grid.Column="0" Content="13" Tag="13" Background="Green" Click="Case_Click" Style="{StaticResource StarButtonStyle}"/>
            <Button Grid.Row="2" Grid.Column="1" Content="14" Tag="14" Background="Red"   Click="Case_Click" Style="{StaticResource StarButtonStyle}"/>
            <Button Grid.Row="2" Grid.Column="2" Content="15" Tag="15" Background="White" Click="Case_Click" Style="{StaticResource StarButtonStyle}"/>
            <Button Grid.Row="2" Grid.Column="3" Content="16" Tag="16" Background="Green" Click="Case_Click" Style="{StaticResource StarButtonStyle}"/>
            <Button Grid.Row="2" Grid.Column="4" Content="17" Tag="17" Background="Red"   Click="Case_Click" Style="{StaticResource StarButtonStyle}"/>
            <Button Grid.Row="2" Grid.Column="5" Content="18" Tag="18" Background="White" Click="Case_Click" Style="{StaticResource StarButtonStyle}"/>

            <!-- Ligne 3 -->
            <Button Grid.Row="3" Grid.Column="0" Content="19" Tag="19" Background="Red"   Click="Case_Click" Style="{StaticResource StarButtonStyle}"/>
            <Button Grid.Row="3" Grid.Column="1" Content="20" Tag="20" Background="Green" Click="Case_Click" Style="{StaticResource StarButtonStyle}"/>
            <Button Grid.Row="3" Grid.Column="2" Content="21" Tag="21" Background="White" Click="Case_Click" Style="{StaticResource StarButtonStyle}"/>
            <Button Grid.Row="3" Grid.Column="3" Content="22" Tag="22" Background="Red"   Click="Case_Click" Style="{StaticResource StarButtonStyle}"/>
            <Button Grid.Row="3" Grid.Column="4" Content="23" Tag="23" Background="Green" Click="Case_Click" Style="{StaticResource StarButtonStyle}"/>
            <Button Grid.Row="3" Grid.Column="5" Content="24" Tag="24" Background="White" Click="Case_Click" Style="{StaticResource StarButtonStyle}"/>

        </Grid>
	</Grid>
</Window>