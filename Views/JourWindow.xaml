<Window x:Class="Carte_de_Noel_HV.Views.JourWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Carte du jour 🎄"
        Height="450"
        Width="350"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">

        <!-- Définition des lignes -->
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <!-- Zone Image -->
        <Border Grid.Row="0"
                CornerRadius="12"
                ClipToBounds="True">
            <Image x:Name="CarteImage"
                   Stretch="UniformToFill"/>
        </Border>

        <!-- Zone Texte -->
        <ScrollViewer Grid.Row="1" Margin="0,10,0,0">
            <TextBlock x:Name="CarteTexte"
                       FontSize="16"
                       TextWrapping="Wrap"
                       TextAlignment="Center"/>
        </ScrollViewer>

    </Grid>
</Window>
