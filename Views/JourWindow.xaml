<Window     x:Class="Carte_de_Noel_HV.Views.JourWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Carte du jour"
        Height="500"
        Width="400">

    <!-- Conteneur vertical -->
    <StackPanel Margin="10">

        <!-- Image de la carte -->
        <Image x:Name="ImageCarte"
               Height="250"
               Stretch="Uniform" />

        <!-- Texte de la carte -->
        <TextBlock x:Name="TexteCarte"
                   Margin="0,10,0,0"
                   TextWrapping="Wrap"
                   FontSize="16" />
    </StackPanel>
</Window>
